{
  "name": "@alloc/moti",
  "description": "The universal React Native animation library, powered by Reanimated 3. ðŸ¦‰",
  "version": "54.0.0-beta.8",
  "keywords": [
    "react-native",
    "ios",
    "android",
    "web"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alloc/moti.git",
    "directory": "packages/moti"
  },
  "bugs": {
    "url": "https://github.com/alloc/moti/issues"
  },
  "homepage": "https://github.com/alloc/moti.git#readme",
  "main": "build/index.js",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "types": "./index.d.ts",
  "files": [
    "src",
    "build",
    "!**/__tests__",
    "interactions",
    "skeleton",
    "index.d.ts",
    "svg",
    "author"
  ],
  "exports": {
    ".": {
      "react-native": "./src/index.tsx",
      "import": "./build/index.js",
      "require": "./build/index.js",
      "types": "./index.d.ts"
    },
    "./interactions": {
      "react-native": "./src/interactions/index.ts",
      "import": "./build/interactions/index.js",
      "require": "./build/interactions/index.js",
      "types": "./interactions/index.d.ts"
    },
    "./skeleton": {
      "react-native": "./src/skeleton/index.ts",
      "import": "./build/skeleton/index.js",
      "require": "./build/skeleton/index.js",
      "types": "./skeleton/index.d.ts"
    },
    "./svg": {
      "react-native": "./src/svg/index.ts",
      "import": "./build/svg/index.js",
      "require": "./build/svg/index.js",
      "types": "./svg/index.d.ts"
    },
    "./author": {
      "react-native": "./src/author/index.ts",
      "import": "./build/author/index.js",
      "require": "./build/author/index.js",
      "types": "./author/index.d.ts"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "framer-motion": "^12.23.12"
  },
  "peerDependencies": {
    "expo-linear-gradient": "*",
    "react-native-linear-gradient": "*",
    "react-native-reanimated": "*",
    "react-native-safe-area-context": "*"
  },
  "peerDependenciesMeta": {
    "expo-linear-gradient": {
      "optional": true
    },
    "react-native-linear-gradient": {
      "optional": true
    },
    "react-native-safe-area-context": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "expo-linear-gradient": "~15.0.2",
    "expo-module-scripts": "^4.1.9",
    "react": "19.1.0",
    "react-native": "0.81.0",
    "react-native-linear-gradient": "~2.8.3",
    "react-native-reanimated": "~4.0.2",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-worklets": "~0.4.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "test": "expo-module test",
    "prepublishOnly": "expo-module prepublishOnly",
    "type-check": "tsc --noEmit"
  }
